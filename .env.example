# Environment Variables for ProxMox Homelab Stack
# Copy this file to .env and customize for your environment

# Global Settings
NODE_ENV=production
LOG_LEVEL=INFO
TZ=UTC

# Data Paths
DATA_PATH=./data
BACKUP_PATH=./backups
LOG_PATH=./logs

# Network Configuration
FRONTEND_SUBNET=10.20.0.0/24
BACKEND_SUBNET=10.21.0.0/24
MONITORING_SUBNET=10.22.0.0/24

# Security Settings
ENABLE_SECURITY_HARDENING=true
RUN_AS_NON_ROOT=true
ENABLE_READ_ONLY_ROOT=true

# Resource Limits
DEFAULT_CPU_LIMIT=0.5
DEFAULT_MEMORY_LIMIT=512M
DEFAULT_CPU_RESERVATION=0.25
DEFAULT_MEMORY_RESERVATION=256M

# Service Ports
MCP_PORT=7001
IDRAC_PORT=8080
TIMESHIFT_PORT=8765
MONITORING_PORT=9090

# Logging Configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3
LOG_DRIVER=json-file